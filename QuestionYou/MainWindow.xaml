<Window x:Class="QuestionYou.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionYou"
        mc:Ignorable="d"
        Title="Main" Height="350" Width="400">
    <Grid>
        <CheckBox x:Name="IsAdmin" IsChecked="True" Content="Админ/Пользователь" HorizontalAlignment="Center" VerticalAlignment="Top" Height="32" Width="186" FontSize="16" Margin="0,167,0,0"/>
        <Button x:Name="SignIn" Content="Войти" HorizontalAlignment="Center" Margin="0,206,0,0" VerticalAlignment="Top" Height="47" Width="380" FontSize="20" RenderTransformOrigin="0.485,0.021" Click="SignIn_Click"/>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="51" FontSize="36"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="36" Width="149" FontSize="24"/>

    </Grid>
</Window>
